apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: persistent-volume-claim  # Nome que será referenciado no Deployment
spec:
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi  # Tamanho do volume
  storageClassName: standard  # Pode ser ajustado conforme a configuração de armazenamento do seu cluster
